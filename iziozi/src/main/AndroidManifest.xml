<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.smdevelopment.iziozi" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name="it.smdevelopment.iziozi.core.SMIziOziApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_org192"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <!--
            <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        -->

        <meta-data android:name="android.app.default_searchable" android:value=".SMImagesSearchActivity" />

        <activity
            android:name="it.smdevelopment.iziozi.gui.BoardActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.smdevelopment.iziozi.gui.CreateButtonActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <meta-data android:name="android.app.default_searchable"
                android:value="it.smdevelopment.iziozi.gui.SMImagesSearchActivity"/>

        </activity>
        <activity
            android:name="it.smdevelopment.iziozi.gui.SMImagesSearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>
